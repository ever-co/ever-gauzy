<mjml>
	<mj-body background-color="#fff">
		<mj-section>
			<mj-column>
				<mj-image
					width="100px"
					src="{{appLogo}}"
				></mj-image>
				<mj-divider
					border-color="#1B005D"
					border-width="1px"
				></mj-divider>
				<mj-text font-size="20px" font-family="helvetica">
					Welcome to {{appName}}!
				</mj-text>
				<mj-text font-size="16px" font-family="helvetica">
					<p>Dear {{email}},</p>
					<p style="line-height: 1.5rem">
						Thank you for your registration in {{appName}} -
						Open-Source Business Management Platform (ERP/CRM/HRM).
					</p>
					<p>We are happy to have you on board!</p>
					<p>Best regards,</p>
					<p>{{appSignature}}</p>
				</mj-text>
				<mj-divider
					border-color="#1B005D"
					border-width="1px"
				></mj-divider>
				<mj-text align="center" font-size="12px" font-family="helvetica">
					Â© 2019,
					<a href="{{appLink}}" style="color: #598bff">{{appName}}</a>
					by
					<a href="https://ever.co/" style="color: #598bff">Ever Co. LTD.</a>
					All rights reserved.
				</mj-text>
			</mj-column>
		</mj-section>
	</mj-body>
</mjml>
