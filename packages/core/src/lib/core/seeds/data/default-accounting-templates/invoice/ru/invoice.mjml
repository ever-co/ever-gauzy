<mjml>
	<mj-body>
		<mj-section>
			<mj-column padding-top="30px">
				<mj-text font-weight="bold" font-size="28px"><span> INVOICE </span></mj-text>
			</mj-column>
			<mj-column>
				<mj-image
					src="{{imgPath}}"
					width="90px"
					height="90px"
					align="right"
					border-radius="50%"
				/>
			</mj-column>
		</mj-section>
		<mj-section>
			<mj-column>
				<mj-text font-weight="bold"><span>FROM:</span></mj-text>
				<mj-text><span> {{from}} </span></mj-text>
				<mj-spacer height="10px"></mj-spacer>
				<mj-text font-weight="bold"><span> TO: </span></mj-text>
				<mj-text><span> {{to}} </span></mj-text>
			</mj-column>
			<mj-column>
				<mj-text font-weight="bold">
					<div style="display: flex; justify-content: space-between">
						<span>Invoice Number:</span>
						<span>{{invoiceNumber}}</span>
					</div>
				</mj-text>
				<mj-spacer height="10px"></mj-spacer>
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Invoice Date:</span>
						<span>{{invoiceDate}}</span>
					</div>
				</mj-text>
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Due Date:</span>
						<span>{{dueDate}}</span>
					</div>
				</mj-text>
			</mj-column>
		</mj-section>
		<mj-section>
			<mj-column>
				<mj-table>
					<tr
						style="
							border-bottom: 1px solid #ecedee;
							text-align: left;
							padding: 15px 0;
						"
					>
						<th>Item</th>
						<th>Description</th>
						<th>Quantity</th>
						<th>Price</th>
						<th>Total Value</th>
					</tr>
					{{#each invoiceItems}}
					<tr
						style="
							border-bottom: 1px solid #ecedee;
							text-align: left;
							padding: 15px 0;
						"
					>
						<td>{{this.name}}</td>
						<td>{{this.description}}</td>
						<td>{{this.quantity}}</td>
						<td>{{../currency}} {{this.price}}</td>
						<td>{{../currency}} {{this.totalValue}}</td>
					</tr>
					{{/each}}
				</mj-table>
			</mj-column>
		</mj-section>
		<mj-section padding-left="50%">
			<mj-column>
				{{#if tax}}
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Tax:</span>
						<span>
							{{#if_eq taxType 'FLAT'}} {{currency}} {{/if_eq}}
							{{tax}} {{#if_eq taxType 'PERCENT'}} % {{/if_eq}}
						</span>
					</div>
				</mj-text>
				{{/if}} {{#if tax2}}
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Tax 2:</span>
						<span>
							{{#if_eq tax2Type 'FLAT'}} {{currency}} {{/if_eq}}
							{{tax2}} {{#if_eq tax2Type 'PERCENT'}} % {{/if_eq}}
						</span>
					</div>
				</mj-text>
				{{/if}} {{#if discountValue}}
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Discount Value:</span>
						<span>
							{{#if_eq discountType 'FLAT'}} {{currency}}
							{{/if_eq}} {{discountValue}} {{#if_eq discountType
							'PERCENT'}} % {{/if_eq}}
						</span>
					</div>
				</mj-text>
				{{/if}}
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Total Value:</span>
						<span>{{currency}} {{totalValue}}</span>
					</div>
				</mj-text>
				{{#if hasRemainingAmountInvoiced}}
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Already Paid:</span>
						<span>{{currency}} {{alreadyPaid}}</span>
					</div>
				</mj-text>
				<mj-text>
					<div style="display: flex; justify-content: space-between">
						<span style="font-weight: bold">Amount Due:</span>
						<span>{{currency}} {{amountDue}}</span>
					</div>
				</mj-text>
				{{/if}}
			</mj-column>
		</mj-section>
	</mj-body>
</mjml>
