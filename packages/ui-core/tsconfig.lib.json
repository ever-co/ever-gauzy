{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"declaration": true,
		"declarationMap": true,
		"inlineSources": true,
		"types": []
	},
	"exclude": ["src/**/*.spec.ts", "src/test-setup.ts", "jest.config.ts", "src/**/*.test.ts"],
	"include": [
		"src/**/*.ts",
		"common/**/*.ts",
		"core/**/*.ts",
		"i18n/**/*.ts",
		"shared/**/*.ts",
		"theme/**/*.ts",
		"typings.d.ts"
	]
}
