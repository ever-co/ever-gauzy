{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "./dist",
		"types": ["node", "jest"]
	},
	"exclude": ["src/**/*.spec.ts", "src/test-setup.ts", "jest.config.ts", "src/**/*.test.ts"],
	"include": [
		"src/**/*.ts",
		"common/**/*.ts",
		"core/**/*.ts",
		"i18n/**/*.ts",
		"shared/**/*.ts",
		"theme/**/*.ts",
		"typings.d.ts"
	]
}
