{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"lib": ["es2020", "es2017", "es2016", "dom"]
	},
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true,
		"enableResourceInlining": true
	},
	"exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
