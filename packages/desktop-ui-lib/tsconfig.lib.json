{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"target": "es2016",
		"declaration": true,
		"experimentalDecorators": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"types": ["node"],
		"lib": ["dom", "es2018"]
	},
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true,
		"enableResourceInlining": true
	},
	"moduleResolution": "node",
	"exclude": ["src/test-setup.ts", "**/*.spec.ts"],
	"include": ["**/*.ts"]
}
