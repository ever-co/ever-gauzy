		"sourceMap": false,
		"removeComments": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"target": "es6",
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
