{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"types": ["node", "jest"],
		"target": "es6"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
