{
	"name": "common-angular",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/common-angular/src",
	"projectType": "library",
	"release": {
		"version": {
			"generatorOptions": {
				"packageRoot": "{projectRoot}\\dist",
				"currentVersionResolver": "git-tag"
			}
		}
	},
	"tags": [],
	"implicitDependencies": [],
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "packages/common-angular/dist",
				"main": "packages/common-angular/src/index.ts",
				"tsConfig": "packages/common-angular/tsconfig.lib.json",
				"assets": [
					"packages/common-angular/*.md"
				]
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "{projectRoot}\\dist"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "packages/common-angular/jest.config.ts"
			}
		}
	}
}
