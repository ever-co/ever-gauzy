{
	"compilerOptions": {
		"outDir": "../../dist/apps/desktop-timer",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "ES2022",
		"types": [
			"pino-pretty"
		],
		"paths": {
			"@gauzy/contracts": ["../../dist/packages/contracts"],
			"@gauzy/desktop-lib": ["../../dist/packages/desktop-lib"],
			"@gauzy/desktop-ui-lib": ["../../dist/packages/desktop-ui-lib"],
			"@gauzy/desktop-window": ["../../dist/packages/desktop-window"]
		}
	},
	"files": [
		"global.d.ts"
	],
	"include": [
		"src/index.ts",
		"src/preload.ts"
	],
	"exclude": [
		"jest.config.ts"
	]
}
