{
	"name": "gauzy-server",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/server/src",
	"tags": [],
	"generators": {
		"@nx/angular:component": {
			"style": "scss"
		}
	},
	"targets": {
		"build": {
			"executor": "nx-electron:build",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "dist/apps/gauzy-server",
				"main": "apps/server/src/index.ts",
				"tsConfig": "apps/server/tsconfig.app.desktop.json",
				"deleteOutputPath": false,
				"assets": [
					"apps/server/src/assets",
					{
						"glob": "**/*",
						"input": "apps/server/src/",
						"ignore": [
							"**/*.ts",
							"**/*.html"
						],
						"output": ""
					}
				],
				"additionalEntryPoints": [
					{
						"entryName": "preload",
						"entryPath": "apps/server/src/preload/preload.ts"
					},
					{
						"entryName": "ui-server",
						"entryPath": "apps/server/src/preload/ui-server.ts"
					}
				]
			},
			"configurations": {
				"production": {
					"optimization": true,
					"extractLicenses": true,
					"inspect": false,
					"fileReplacements": [
						{
							"replace": "apps/server/src/environments/environment.ts",
							"with": "apps/server/src/environments/environment.prod.ts"
						}
					]
				}
			}
		},
		"serve": {
			"executor": "nx-electron:execute",
			"options": {
				"buildTarget": "gauzy-server:build"
			}
		},
		"build-ui": {
			"executor": "@angular-devkit/build-angular:application",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"baseHref": "./",
				"outputPath": "dist/apps/gauzy-server",
				"deleteOutputPath": false,
				"browser": "apps/server/src/main.ts",
				"index": "apps/server/src/index.html",
				"polyfills": [
					"zone.js"
				],
				"tsConfig": "apps/server/tsconfig.app.json",
				"stylePreprocessorOptions": {
					"includePaths": [
						"apps/server/src/assets/styles",
						"packages/ui-core/static/styles"
					]
				},
				"assets": [
					"apps/server/src/favicon.ico",
					"apps/server/src/assets"
				],
				"styles": [
					"apps/server/src/styles.css",
					"node_modules/@nebular/theme/styles/prebuilt/default.css",
					"node_modules/bootstrap/dist/css/bootstrap.css",
					"node_modules/typeface-exo/index.css",
					"node_modules/roboto-fontface/css/roboto/roboto-fontface.css",
					"node_modules/ionicons/dist/scss/ionicons.scss",
					"node_modules/@fortawesome/fontawesome-free/css/all.css",
					"node_modules/socicon/css/socicon.css",
					"node_modules/nebular-icons/scss/nebular-icons.scss",
					"node_modules/@ali-hm/angular-tree-component/css/angular-tree-component.css",
					"node_modules/leaflet/dist/leaflet.css",
					"apps/server/src/assets/styles/styles.scss",
					"node_modules/@ng-select/ng-select/themes/default.theme.css"
				],
				"scripts": [],
				"allowedCommonJsDependencies": [
					"localforage",
					"moment",
					"moment-duration-format",
					"moment-timezone",
					"rfdc",
					"eva-icons",
					"moment-range",
					"slugify",
					"dayjs"
				]
			},
			"configurations": {
				"production": {
					"fileReplacements": [
						{
							"replace": "apps/server/src/environments/environment.ts",
							"with": "apps/server/src/environments/environment.prod.ts"
						},
						{
							"replace": "packages/ui-config/src/lib/environments/environment.ts",
							"with": "packages/ui-config/src/lib/environments/environment.prod.ts"
						}
					],
					"optimization": true,
					"sourceMap": true,
					"namedChunks": false,
					"extractLicenses": true,
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "20mb",
							"maximumError": "40mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "60kb",
							"maximumError": "120kb"
						}
					],
					"outputHashing": "all"
				},
				"development": {
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve-ui": {
			"executor": "@angular-devkit/build-angular:dev-server",
			"configurations": {
				"production": {
					"buildTarget": "gauzy-server:build-ui:production"
				},
				"development": {
					"buildTarget": "gauzy-server:build-ui:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"buildTarget": "server:build"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "apps/server/jest.config.ts"
			}
		}
	}
}
